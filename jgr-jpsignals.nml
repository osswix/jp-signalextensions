//This switch decides which spriteset to use for each signal aspect for one signal type (this will be used for block electric, style one)
switch(FEAT_SIGNALS, SELF, twotall_a, getbits(extra_callback_info2, 0, 2)){
	00: signal_2a_st;
	02: signal_2a_cl;
}

switch(FEAT_SIGNALS, SELF, twotall_b, getbits(extra_callback_info2, 0, 2)){
	00: signal_2a_st;
	02: signal_2b_ct:
}

