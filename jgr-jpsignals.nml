item (FEAT_SIGNALS, custom_signals, 0) { 
	property{
		extra_aspects:		4;	//Number of extra aspects to be used across all signal types (0=only red/green, 1=red/yellow/green etc). Set it to the max of all your signal types
		
		define_style:		1;
		style_name:			string(STR_SIG_1);
		style_lookahead_extra_aspects:	2; //This is how you override the extra aspects, i.e. extra_aspects is set to 6 but you only want trains to see 4 signals ahead
		style_electric_enabled: bitmask(SIGNAL_TYPE_NORMAL, SIGNAL_TYPE_PBS);//Types of electric signals availiable to be built


		define_style:		2;
		style_name:			string(STR_SIG_2);
		style_lookahead_extra_aspects:	2;
		style_electric_enabled: bitmask(SIGNAL_TYPE_NORMAL);
		style_semaphore_enabled: bitmask(SIGNAL_TYPE_PBS_ONEWAY);//Types of electric signals availiable to be built
	}

    graphics {
        japanmultiaspect;
    }
}
